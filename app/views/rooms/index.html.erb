<p id="notice"><%= notice %></p>

<h1>Listing Rooms</h1>

<table>
  <thead>
    <tr>
      <th>Home type</th>
      <th>Room type</th>
      <th>Accomodate</th>
      <th>Bedroom</th>
      <th>Bed</th>
      <th>Address</th>
      <th>Is tv</th>
      <th>Is kitchen</th>
      <th>Is internet</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rooms.each do |room| %>
      <tr>
        <td><%= room.home_type %></td>
        <td><%= room.room_type %></td>
        <td><%= room.accomodate %></td>
        <td><%= room.bedroom %></td>
        <td><%= room.bed %></td>
        <td><%= room.address %></td>
        <td><%= room.is_tv %></td>
        <td><%= room.is_kitchen %></td>
        <td><%= room.is_internet %></td>
        <td><%= room.price %></td>
        <td><%= link_to 'Show', room %></td>
        <td><%= link_to 'Edit', edit_room_path(room) %></td>
        <td><%= link_to 'Destroy', room, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

